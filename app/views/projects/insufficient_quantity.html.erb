<h2>Projects in need of materials</h2>
<ul>
  <% @insufficient_quantity.each do |project| %>
    <li>
        <ul><%= link_to project.name, project_path(project) %>
            <% show_materials_shortage(project).each do |item| %>
              <li><%= item %></li>
            <% end %>
        </ul>
    </li>
  <% end %>
</ul>
