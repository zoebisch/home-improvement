<ul>
  <% if @insufficient_quantity == [] %>
    <h3>All projects have sufficient materials</h3>

  <% else %>
    <h3>Projects in need of materials</h3>


      <% @insufficient_quantity.each do |project| %>
        <p><%= link_to project.name, project_path(project) %></p>

            <% show_materials_shortage(project).each do |item| %>
              <li><%= item %></li>
            <% end %>
          <br></br>

       <% end %>

  <% end %>
</ul>
