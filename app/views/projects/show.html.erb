<br></br>
<h3> <%= @project.name %> | <%= @project.house.address%> </h3>

<h4>
  <%= form_for @project do |f|%>
      <%= f.select :status, ['not started', 'in progress', 'complete']%>
      <%= f.submit "set status" %>
    <% end %> 
</h4>

 <%= render 'shared/error_messages', object: @project %>

<ul>
  <% @project.items.each do |item| %>
    <li><%= material_lookup(item) %></li>
  <% end %>
</ul>

<p>
   <%= link_to "Back To Address", house_path(@project.house) %> |
   <%= link_to "Edit Project Name", edit_project_path %> |
   <%= link_to "Update Items List", project_items_path(@project) %> |
   <%= link_to "Remove Project",  project_path(@project), method: :delete %>
</p>
