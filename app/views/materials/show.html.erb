<h3><%= @material.name %></h3>
<h4> Current Inventory: <%= @material.quantity_on_hand%></h4>

<p><%= material_being_used? %></p>

<ul>
  <% Project.all.each do |project| %>
    <% if project.materials.exists?(@material.id) %>
        <li>Needed for: <%= link_to project.name, project_path(project) %></li>
    <% end %>
  <% end %>
</ul>

<p><%= link_to "Edit Material", edit_material_path %></p>
