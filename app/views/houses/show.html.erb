<h2>Now Viewing: <%= @house.address %></h2>
<% if @house.projects.empty? %>
  <p><%= link_to "Remove Address", house_path(@house), method: :delete %></p>
<% else %>
<ul>
  <% @house.projects.each do |project| %>
    <li><%= link_to project.name, project_path(project) %></li>
  <% end %>
</ul>
<% end %>
